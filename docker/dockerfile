FROM nvcr.io/nvidia/pytorch:20.06-py3
RUN mkdir /root/datasets
RUN mkdir /root/datasets/localbot
RUN mkdir /root/models
RUN mkdir /root/models/localbot

RUN pip install colorama
RUN pip install Pillow
RUN pip install torchsummary
RUN pip install scipy==1.5.4

RUN git clone https://github.com/DanielCoelho112/synfeal

ENV PYTHONPATH="/workspace/synfeal"
ENV USER="deep"
ENV SYNFEAL_DATASETS="/root"
CMD ["sh", "-c", "cd synfeal && git pull"]


