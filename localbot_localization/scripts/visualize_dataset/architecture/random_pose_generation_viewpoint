            rotate_y90 = R.from_euler('yxz', [90, -90, 0], degrees=True).as_matrix()
            matrix_quaternion_marker = np.dot(matrix_quaternion_marker,rotate_y90)
            quaternion_marker = R.from_matrix(matrix_quaternion_marker).as_quat()

